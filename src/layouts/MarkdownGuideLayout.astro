---
const { frontmatter } = Astro.props;
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<html lang="en">
	<head>
		<meta charset="utf-8"/>
		<link rel="icon" type="image/png" href="../images/pearfect_pal_logo.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
		<meta name="viewport" content="width=device-width" />
		<title>{frontmatter.title} | INL</title>
	</head>
	<body>
		<Header />
        <div class="banner-container" id={frontmatter.id+"-banner"}></div>
		<div class="content-container">
			<h1>{frontmatter.title}</h1>
			<p>Last Updated: {frontmatter.lastUpdated}</p>
			<p>By: {frontmatter.author}</p>
			<slot />
		</div>
        <Footer />
		<script>
			import "../scripts/resize.js";
		</script>
    </body>
</html>


