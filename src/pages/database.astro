---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '../styles/database.css';
import ThemedTextField from '../components/ThemedTextField.jsx';
import DropdownSortSelect from '../components/DropdownSortSelect.jsx';
import MultipleSelectChipFilters from '../components/MultipleSelectChipFilters.jsx';
---
<html lang="en">
	<head>
		<meta charset="utf-8"/>
		<link rel="icon" type="image/png" href="/images/pearfect_pal_logo.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
		<meta name="viewport" content="width=device-width" />
		<meta name="keywords" content="Infinity, Nikki, IN, Items, Database, Compendium, Clothes">
		<meta name="description" content="A full list of clothing items available in Infinity Nikki.">
		<title>Database | INL</title>
	</head>
	<body>
		<Header />
		<div class="content-container">
			<h1>Database</h1>
			<p>A full list of clothing items available in Infinity Nikki.</p>
			<p><b>Status: </b>Up to date as of December 6th. Currently working on getting item stats.<p>
			<div id="loadingSpinner" style="display:none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
				<div class="spinner"></div>
			</div>
			<div id="search-and-sort">
				<ThemedTextField label="Search by item or outfit" client:only />
				<div id="sort">
					<button type="button" id="sort-btn">
						<img src="/images/descending_icon.png" class="btn-img show" />
						<img src="/images/ascending_icon.png" class="btn-img" />
					</button>
					<DropdownSortSelect client:only />
				</div>
			</div>
			<div id="collapsible-filters">
				<button type="button" class="collapsible">
					<p>Filters</p>
					<p>+</p>
				</button>
				<div id="filter-container">
					<MultipleSelectChipFilters client:only />
				</div>
			</div>
			<div class="pagination-container"></div>
			<div id="item-card-container"></div>
			<div class="pagination-container"></div>
		</div>
		<Footer />
		<script>
			import "../scripts/resize.js"
			import "../scripts/database.js"
		</script>
	</body>
</html>